<form>
    <div class="row" ng-show="show">
        <h3>City</h3>
        <div class="col-lg-3">
            <label>Name:</label>
            <input type="text" ng-model="city.name" class="form-control" />
        </div>
        <div class="col-lg-3">
            <label>Population:</label>
            <input type="number" ng-model="city.population" class="form-control" />
        </div>
    </div>
    <div class="row" style="margin-top: 15px;" ng-show="show">
        <div class="col-lg-12">
            <button class="btn btn-success" ng-click="save()">Save</button>
            <button class="btn" ng-click="city = {}">Clear</button>
            <button class="btn" ng-click="show = false">Close</button>
        </div>
    </div>
</form>
<hr />
<div class="row well">
    <div class="col-lg-12">
        <h3>Cities <a ng-click="show = true">(New)</a></h3>
        <table class="table table-striped">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Population</th>
                <th></th>
            </tr>
            <tr ng-repeat="c in cities">
                <td>{{c.id}}</td>
                <td>{{c.name}}</td>
                <td>{{c.population}}</td>
                <td>
                    <button class="btn btn-info" ng-click="get(c.id)">Edit</button>
                    <button class="btn btn-danger" ng-click="remove(c.id)">Remove</button>
                </td>
            </tr>
        </table>
    </div>
</div>